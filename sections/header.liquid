<header class="header">
  <div class="header_inner">
    <div class="header_content container">
      <nav class="header_navigations_links">
        <div class="header_brand_logo site_navigation--item">
          <a href="{{ shop.url }}">
            <img src="{{ section.settings.Header_Logo | image_url }}" alt="Adnan Mansuri Logo" />
          </a>
        </div>
        <ul class="menu site_navigation--item">
          {% for block in section.blocks %}
            
          <li>
            <a href="{{ block.settings.header_nav_url }}" class="header_nav_links has_active--effect">{{ block.settings.header_nav_text }}</a>
          </li>
          {% endfor %}
        </ul>
        <div class="cta_main diraction_aware_hover site_navigation--item">
          <a href="{{ section.settings.cta_url }}" class="cta">{{ section.settings.cta_header_text }} <span><img class="theme_icon" src="{{ section.settings.header_cta_icon |image_url }}" alt="right icon"></span></a>
        </div>
      </nav>
      <button class="menu-toggle">â˜°</button>
    </div>
     <div class="off-canvas-menu">
                <button class="menu-close">&times;</button>
            </div>
  </div>
</header>



{% schema %}

  {
    "name":"Header Settings",
    "settings": [
      {  
        "type":"image_picker",
        "id": "Header_Logo",
        "label": "Header Logo"
      },
      {  
        "type":"text",
        "id": "cta_header_text",
        "label": "Header CTA Text"
      },
      {  
        "type":"url",
        "id": "cta_url",
        "label": "Header CTA Url"
      },
      {  
        "type":"image_picker",
        "id": "header_cta_icon",
        "label": "Header CTA Icon"
      },
    ],
    "blocks": [
      {
        "type": "header_nav",
        "name": "Header Nav",
        "settings": [
          {
            "type": "text",
            "id": "header_nav_text",
            "label": "Header Navigation Text"
          },
          {
            "type": "url",
            "id": "header_nav_url",
            "label": "Header Navigation URL"
          }
        ]
      }
    ]
  }
{% endschema %}
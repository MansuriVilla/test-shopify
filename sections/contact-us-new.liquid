<div class="site_contact---page__container site_top--area">
  <div class="contact--page_inner">
    <div class="contact--page__left site_bg--clr_fff">
      <h1 class="contact--page_title">Start Project</h1>
      <div class="contact--page_form--area">
        <p class="contact--page-subtitle">Contact Details</p>
        <form
          action="https://script.google.com/macros/s/AKfycbzHOAbm6YOrWMMiNH0cuDuxw2aVEiGDGCm_YTjnphyPmb6un3jIjWJH14bmFAYjSblY/exec"
          method="post"
          class="site_form--container"
        >
          <div class="site-input_holder">
            <input class="site_input" type="text" id="name" name="name" placeholder="e.g. John Doe" required />
            <label class="site_input--label" for="name">Name</label>
          </div>
          <div class="site-input_holder">
            <input class="site_input" type="number" id="phone" name="phone" placeholder="e.g. +1 450-504-5789" required />
            <label class="site_input--label" for="phone">Phone Number</label>
          </div>
          <div class="site-input_holder">
            <input class="site_input" type="email" id="email" name="email" placeholder="e.g. johndoe@example.com" required />
            <label class="site_input--label" for="email">E-mail</label>
          </div>
          <div class="site-input_holder">
            <input class="site_input" type="text" id="company" name="company" placeholder="e.g. Snip Code.inc" />
            <label class="site_input--label" for="company">Company Name</label>
          </div>
          <div class="site-input_holder has_full--flex">
            <textarea class="site_input site_input--textarea" id="idea" name="idea" placeholder="e.g. I want to create a modern e-commerce website." rows="6"></textarea>
            <label class="site_input--label" for="idea">Have an Idea...??</label>
          </div>

          {% for block in section.blocks %}
            {% if block.type == "title" %}
              <div class="site_selection--area has_full--flex">
                <div class="site_selection--title has_full--flex">
                  <h4>{{ block.settings.block_title }}</h4>
                </div>
                {% assign service_blocks = section.blocks | where: "type", "service_option" %}
                {% for service_block in service_blocks %}
                  <div class="selection_area-btn has_radio--hidden has_half--flex">
                    <input
                      type="radio"
                      id="service_{{ service_block.id }}"
                      name="service"
                      value="{{ service_block.settings.option_value }}"
                      required
                    />
                    <label
                      for="service_{{ service_block.id }}"
                      class="site_cta--outline__000 selection_btn has_magnatic--effect"
                    >
                      {{ service_block.settings.option_text }}
                    </label>
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          {% endfor %}

          <button class="site_btn has_magnatic--effect" type="submit">Submit</button>
        </form>
      </div>
    </div>
    <div class="contact--page__right">
      <img src="{{ section.settings.contact_page_img | image_url }}" alt="Background Image">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "contact_page_img",
      "label": "Contact Page Right Image"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Selection Title",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Block Heading",
          "default": "Select a Service"
        }
      ]
    },
    {
      "type": "service_option",
      "name": "Service Option",
      "settings": [
        {
          "type": "text",
          "id": "option_text",
          "label": "Option Text",
          "default": "Web Development"
        },
        {
          "type": "text",
          "id": "option_value",
          "label": "Option Value",
          "default": "Web Development"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Page",
      "blocks": [
        {
          "type": "title",
          "settings": {
            "block_title": "Select a Service"
          }
        },
        {
          "type": "service_option",
          "settings": {
            "option_text": "Web Development",
            "option_value": "Web Development"
          }
        },
        {
          "type": "service_option",
          "settings": {
            "option_text": "UI/UX Design",
            "option_value": "UI/UX Design"
          }
        },
        {
          "type": "service_option",
          "settings": {
            "option_text": "Graphic Design",
            "option_value": "Graphic Design"
          }
        }
      ]
    }
  ]
}
{% endschema %}
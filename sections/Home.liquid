




{% schema %}
{
  "name": "Hero Section Settings",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Sub Title"
    },
    {
      "type": "text",
      "id": "hero_cta_text",
      "label": "Hero CTA Title",
      "default": "Text Here"
    },
    {
      "type": "url",
      "id": "hero_cta_url",
      "label": "Hero CTA Url",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "hero_cta_img",
      "label": "Hero CTA Image",
    }
  ],
  "blocks": [
    {
      "type": "Slider",
      "name": "Hero Slider Text",
      "settings": [
        {
          "type": "text",
          "id": "hero_slider_text",
          "label": "Hero Slider Text"
        },
        {
          "type": "checkbox",
          "id": "highlight_text",
          "label": "Highlight this text with special class (has__heighlight--clr)",
          "default": false
        }
      ]
    }
  ]
}



  
{% endschema %}